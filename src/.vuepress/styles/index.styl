html
  background-color #112

body
  background-color #112
  min-height 100vh
  min-width 100vw
  height 100%
  width 100%
  overflow-x hidden

#app.landing {
  min-height 100vh
  min-width 100vw
  height 100%
  width 100%
  display flex
  justify-content center
  align-items center
}

.navbar
  background-color #0f0f1f

.navbar .links
  background-color #0f0f1f !important 

.search-box input 
  background-color #0e0e1b !important

.action-button
  background-color: transparent !important
  border: 1px solid #8b66f8
  border-radius: 9999px !important
  transition 0.15s all ease-in-out !important

.action-button:hover
  background-color #8b66f8 !important

.action-button:after
  content "→"
  margin-left: 10px
  transition 0.15s all ease-in-out !important

.action-button:hover:after
  margin-left: 20px

.sidebar
  background-color #0f0f1f